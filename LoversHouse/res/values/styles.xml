<resources>

    
    <style name="AppTheme" parent="android:Theme.Light" />
    <style name="AudioFileInfoOverlayText">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">3.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
 
<style name="CustomWindowTitleBackground"> 
<item name="android:background">@drawable/_0001_navigationbars</item> 
</style> 
<style name="CustomTitleBar" parent="android:Theme"> 
<item name="android:windowTitleSize">40dp</item> 
<item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item> <!--设置titlebar的背景-->
</style> 

<style name="chat_text_date_style">
	    <item name="android:padding">2dp</item>    
		<item name="android:textColor">#808080</item>   
		<item name="android:textSize">12sp</item>      
		
	</style>
  
	     
	<style name="chat_content_date_style">
	    <item name="android:minHeight">50dp</item>
	    <item name="android:gravity">left|center</item>    
		<item name="android:textColor">#000000</item>   
		<item name="android:textSize">15sp</item>      
		<item name="android:lineSpacingExtra">2dp</item>   
		<item name="android:clickable">true</item>   
		<item name="android:focusable">true</item>   
		<item name="android:background">#bfbfbf</item> 
	</style>	 
	
		<style name="chat_action_style">
	    <item name="android:minHeight">50dp</item>
	    <item name="android:gravity">left|center</item>    
		<item name="android:textColor">#bfbfbf</item>   
		<item name="android:textSize">15sp</item>      
		<item name="android:lineSpacingExtra">1dp</item>   
		<item name="android:clickable">true</item>   
		<item name="android:focusable">true</item>   
		
	</style>	
	
	<style name="chat_text_name_style">  
		<item name="android:textColor">#818181</item>   
		<item name="android:textSize">15sp</item>      
		<item name="android:gravity">center</item> 
	</style>
	
